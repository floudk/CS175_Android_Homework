<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center_horizontal">
    <EditText
        android:id="@+id/filename"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:background="#A79D38"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:hint="请输入文件名..."
        />


    <SurfaceView
        android:layout_margin="10dp"
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:paddingBottom="5dp"
        android:backgroundTint="@color/teal_200">

        <TextView
            android:id="@+id/recent_info"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#297A77" />

        <Button
            android:id="@+id/take_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/recent_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/shoot" />

        <ImageView
            android:id="@+id/last_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/recent_info"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/take_photo"
            android:background="@drawable/lastimg2" />
        <Button
            android:id="@+id/switcher"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/recent_info"
            android:text="Flip"
            android:background="@drawable/lastimg"
            />
    </RelativeLayout>


</LinearLayout>