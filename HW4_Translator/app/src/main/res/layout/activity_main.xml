<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#636363"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/my_input"
        android:layout_width="332dp"
        android:layout_height="151dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="35dp"
        android:background="#ade5e2"
        android:cursorVisible="false"
        android:hint="Please input a word or sentence..."
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textColorHint="#7d7d7d"
        android:textSize="18dp" />

    <Button
        android:id="@+id/my_btn"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="50dp"
        android:background="#62cac5"
        android:textAlignment="gravity"
        android:shadowColor="#62cac5"
        android:text="Translate"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#62cac5"
        />

    <TextView
        android:id="@+id/my_output"
        android:layout_width="332dp"
        android:layout_height="151dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:background="#ade5e2"
        android:gravity="center_vertical"
        android:hint="Waiting for input......"
        android:textColor="@color/black"
        android:textSize="18dp" />

</RelativeLayout>